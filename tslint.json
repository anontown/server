{
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "member-access": [
      true,
      "no-public"
    ],
    "interface-name": false,
    "object-literal-sort-keys": false,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "max-classes-per-file": false,
    "no-empty-interface": false,
    "no-console": false,
    "await-promise": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "no-shadowed-variable": false,
    "array-type": [
      true,
      "array"
    ]
  },
  "rulesDirectory": [],
  "no-floating-promises": true
}